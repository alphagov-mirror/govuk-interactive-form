<div class="item" data-id="<%= item["id"] %>" data-index="<%= index %>" style="<%= if index > 0 then "display: none" end %>">
  <%= render "govuk_publishing_components/components/heading", {
    text: item["question"],
  } %>
  <div class="item-content">
    <%= item["content"].to_s.html_safe %>
    <% if item["iframe_url"].present? %>
      <iframe src="<%= item["iframe_url"] %>" class="iframe"></iframe>
    <% end %>
  </div>
  <div class="govuk-width-container govuk-!-padding-top-3">
    <div class="govuk-grid-row">
      <div class="govuk-grid-column-full">
        <%= render "selected_answers/new", index: index, item: item, answers: item["answers"] %>
      </div>
    </div>
  </div>
</div>

